<input type="hidden" name="_token" value="<?php echo csrf_token(); ?>">
<select name="year" id="year" class="form-control" required>
    <?php if(isset($yearAppend)): ?>
        <option value="<?php echo $yearAppend; ?>"><?php echo $yearAppend; ?></option>
    <?php endif; ?>
    <?php for( $year = date("Y"); $year >= date("Y")-10; $year-- ): ?>
        <option value="<?php echo $year; ?>"><?php echo $year; ?></option>
    <?php endfor; ?>
</select>
<br>
<select name="month" id="month" class="form-control" required>
    <?php if(isset($monthAppend)): ?>
        <option value="<?php echo $monthAppend; ?>"><?php echo date("F",strtotime ($monthAppend- date("n")." months")); ?></option>
    <?php else: ?>
        <option value="<?php echo date("n"); ?>"><?php echo date("F"); ?></option>
    <?php endif; ?>
    <?php for( $month = 1; $month <= 12; $month++ ): ?>
        <?php $monthCount = $month - date("n") ?>
        <option value="<?php echo $month; ?>"><?php echo date("F",strtotime ($monthCount." months")); ?></option>
    <?php endfor; ?>
</select>